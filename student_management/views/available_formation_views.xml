<?xml version="1.0"?>
<odoo>
    <record id="available_formation_action" model="ir.actions.act_window">
        <field name="name"> Gestion des Etudiants </field>
        <field name="res_model">available.formation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="available_formation_view_tree" model="ir.ui.view">
        <field name="name">available.formation.tree</field>
        <field name="model">available.formation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="available_formation_view_form" model="ir.ui.view">
        <field name="name">available.formation.form</field>
        <field name="model">available.formation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>